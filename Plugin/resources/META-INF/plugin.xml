<idea-plugin version="2">
    <id>com.madrapps.issuetracker.plugin</id>
    <name>Issue Tracker</name>
    <version>0.1</version>
    <vendor email="madrasappfactory@gmail.com" url="http://madrapps.github.io">Madrapps</vendor>

    <description><![CDATA[
      Enter short description for your plugin here.<br>
    ]]></description>

    <change-notes><![CDATA[
      Initial Commit<br>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <depends>com.intellij.tasks</depends>
    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="CheckTask" class="com.madrapps.issuetracker.actions.CheckTask" text="CheckTask"
                description="Check the task, sample only">
            <add-to-group group-id="HelpMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl B"/>
        </action>
    </actions>
</idea-plugin>